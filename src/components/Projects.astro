---
import Html from "./icons/Html.astro";
import Css from "./icons/Css.astro";
import React from "./icons/React.astro";
const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-black text-white",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    class: "bg-black text-white",
    icon: Css,
  },
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: React,
  },
};
const PROJECTS = [
  {
    title: "TIC TAC TOE",
    description: "A classic game of Tic Tac Toe implemented using React.",
    link: "https://tic-tac-toe-lake-gamma.vercel.app/",
    github: "https://github.com/Albertomomu/tic-tac-toe",
    image: "images/projects/tiktaktoe.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.REACT],
  },
];
---

{
  PROJECTS.map(({ title, description, link, github, image, tags }) => (
    <article class="mb-24">
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-white text-pretty">{description}</p>
      <ul class="flex gap-x-4 mb-4">
        {tags.map((tag) => (
          <li>
            <span
              class={`${tag.class} flex gap-x-2 rounded-full text-sm items-center justify-center px-3 py-1 hover:bg-white/20 hover:scale-110 transition`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Screenshot of the project ${title}`}
      />
    </article>
  ))
}
